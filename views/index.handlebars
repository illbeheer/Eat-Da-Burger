<div class="jumbotron">
  <h2>EAT DA BURGER!</h2>
</div>
<div class="container">
  <div class="row">
    <div class="col-xs-12 col-md-6">
      <div id="burgerlistBox">
        <h3>Lets Eat Some Burgers</h3>
        <ol>
          {{#each burger}} {{#unless devoured}}
          <li>
            {{burger_name}}
              <button data-id={{id}} class="devourB btn btn-success">Eat!</button>    

          </li>
          {{/unless}} {{/each}}
        </ol>
      </div>
    </div>
    <div class="col-xs-12 col-md-6">
      <h3>Burgers Eaten</h3>
      <div id="devouringlistBox">
        <ol class="center">
          {{#each burger}} {{#if devoured}}
          <li>{{burger_name}}
          <button data-id={{id}} class="deleteB btn bg-danger text-warning">Delete Burger</button>
          </li>
          {{/if}} {{/each}}
        </ol>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-xs-12 col-md-12">

      <form class="create-form">

        <div class="form-group">
          <label for="addBurger">enter a burger type:</label>
          <input type="text" id="addBurger" name="burgerName">
        </div>

        <button class="btn btn-success" type="submit">Burger Add</button>

      </form>
    </div>
    </div>
    </div>